<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F0F4FA"
    tools:context=".profileFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="24dp"
        android:background="#F0F4FA">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="معلومات الحساب"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="@font/almara_regular"
            android:textAlignment="center"
            android:textColor="@color/black"/>

        <!-- Email (from login) -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="البريد الإلكتروني:"
            android:layout_marginTop="20dp"/>

        <EditText
            android:id="@+id/signup_email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="2dp"
            android:inputType="textEmailAddress"
            android:enabled="false"
            android:background="@drawable/baby_blue_boarder"
        />

        <!-- Name -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="الاسم الاول:"
            android:layout_marginTop="15dp"/>

        <EditText
            android:id="@+id/signup_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/baby_blue_boarder"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="اسم العائلة:"
            android:layout_marginTop="15dp"/>

        <EditText
            android:id="@+id/signup_fname"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/baby_blue_boarder"/>

        <!-- Phone -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="رقم الهاتف:"
            android:layout_marginTop="15dp"/>

        <EditText
            android:id="@+id/signup_phone1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="2dp"
            android:inputType="phone"
            android:background="@drawable/baby_blue_boarder"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="رقم الهاتف (احتياطي):"
            android:layout_marginTop="15dp"/>

        <EditText
            android:id="@+id/signup_phone2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="2dp"
            android:inputType="phone"
            android:background="@drawable/baby_blue_boarder"/>


        <Button
            android:id="@+id/save_profile_btn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="حفظ التغييرات"
            android:fontFamily="@font/almara_regular"
            android:textSize="22dp"
            android:layout_marginTop="30dp"/>
        <Button
            android:id="@+id/delete_account_btn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:text="حذف الحساب"
            android:textColor="@android:color/white"
            android:backgroundTint="#FFC107"
        android:fontFamily="@font/almara_regular"
        android:textSize="22dp"
        app:cornerRadius="20dp"/>
    </LinearLayout>
</FrameLayout>