<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/showBabiesLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/untitled_design__5_"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ShowBabyFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="#F5F5F5"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/baby_blue_boarder"
            android:padding="24dp"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Babies List"
                android:textSize="36sp"
                android:textStyle="bold"
                android:textColor="@color/yellow"
                android:textAlignment="center" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="20dp"
                android:fillViewport="true">

                <LinearLayout
                    android:id="@+id/babiesContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

            </ScrollView>

            <Button
                android:id="@+id/addBabyButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="@color/baby_blue"
                android:elevation="6dp"
                android:paddingStart="24dp"
                android:paddingEnd="24dp"
                android:text="Add Baby"
                android:textColor="@android:color/white"
                android:textSize="22sp" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
